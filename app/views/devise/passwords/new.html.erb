<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
  <section class="vh-100 gradient-custom">
    <div class="container py-5 h-100">
      <div class="row d-flex justify-content-center align-items-center h-100">
        <div class="col-12 col-md-8 col-lg-6 col-xl-5">
          <div class="card bg-dark text-white" style="border-radius: 1rem;">
            <div class="card-body p-5 text-center">
  
              <div class="mb-md-5 mt-md-4 pb-5">
  
                <h2 class="fw-bold mb-2 text-uppercase">Forgot your password?</h2>
  
                <div class="form-group field">
                  <%= f.label :email, class: "form-label" %><br />
                  <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control form-control-lg" %>
                </div><br />
  
                <%= render "devise/shared/links" %><br />
  
                <%= f.button "Reset password", type: "submit", :class=> "btn btn-outline-light btn-lg px-5" %>
              </div>
  
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>
  <% end %>

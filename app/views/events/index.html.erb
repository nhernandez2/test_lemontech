<p style="color: green"><%= notice %></p>

<h1>Lista de Eventos</h1>
<a href="<%= new_event_path %>" class="btn btn-success btn-icon-split">
  <span class="text">Crear Evento</span>
</a>
<br><br>
<table class="table">
  <thead>
    <tr>
      <th>Id</th>
      <th>Nombre</th>
      <th>Fecha</th>
      <th>Ubicaci√≥n</th>
      <th>Capacidad</th>
      <th></th>
  </thead>
  <tbody>
    <% @events.each do |event| %>
    <tr>
      <td><%= event.id %></td>
      <td><%= event.name %></td>
